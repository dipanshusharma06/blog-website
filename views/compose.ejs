<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="inputText">Title</label>
        <input class="form-control" type="text" name="inputText" id="inputText">
    </div>
    <div class="form-group">
        <label for="postInputText">Post</label>
        <textarea class="form-control" name="postInputText" id="postInputText" rows="4"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="submitButton">Publish</button>
</form>
